<% @title="Card Processing" %>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p>
          <%= flash[:error] %>
        </p>
      </div>
    <% end %>
    <label class="amount">
      <span>
        <%="Amount: #{@amount_dollars}"%>
      </span>
    </label>
  </article>
  <script class="stripe-button" data-amount="<%= @amount_cents %>" data-description="A month's subscription" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-locale="auto" src="https://checkout.stripe.com/checkout.js"></script>
<% end %>
