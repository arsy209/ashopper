<div id="all">
  <div id="all">
    <div id="content">
      <div class="container">
       <div class="col-md-12">
        <ul class="breadcrumb">
         <li><a href="#">Home</a>
         </li>
         <li>Ladies</li>
        </ul>
      </div>
      <div class="col-md-3">
        <div class="panel panel-default sidebar-menu">
         <div class="panel-heading">
          <h3 class="panel-title">Categories</h3>
        </div>
        <div class="panel-body">
         <ul class="nav nav-pills nav-stacked category-menu">
           <ul>
            <% @categories.each do |category| %>
             <li><%= link_to category.title, category_path(category),  class: "dropdown-item" %></li>
           <%end%>
          </ul>
         </ul>
       </div>
     </div>
    <div class="banner">
      <a href="#"><img src="/img/banner.jpg" alt="sales 2014" class="img-responsive"></a>
    </div>
    </div>
    <div class="col-md-9">
     <div class="box">
     </div>
     <div class="box info-bar">
      <div class="row">
       <div class="col-lg-12 col-md-8  products-number-sort">
        <div class="row">
         <form class="form-inline">
             <div class="col-md-10 col-sm-6">
               <ul class="search">
             <%= form_tag(items_path, method: "get", id: "search-items") do %>
               <%= text_field_tag(:search, params[:search], placeholder: "Search Items",:size=>"60") %>
               <%= submit_tag("Search", name: nil, class: "btn btn-primary") %>
             <% end %>
           </ul>
             </div>
           </form>
         </div>
        </div>
      </div>
    </div>
    <div class="row products">
     <%@items.each do |t|%>
      <div class="col-md-4 col-sm-6">
         <div class="product">
           <div class="flip-container">
              <div class="flipper">
                <div class="front">
                <%= link_to image_tag(t.image, class: 'img-responsive'), category_item_path(t.category, t)%>
               </div>
               <div class="back">
                 <%= link_to image_tag(t.image, class: 'img-responsive'), category_item_path(t.category, t)%>
               </div>
              </div>
            </div>
             <a href="detail.html" class="invisible">
               <img src="/img/product1.jpg" alt="" class="img-responsive">
             </a>
           <div class="text">
             <h3><%= link_to t.title, category_item_path(t.category, t) %></h3>
             <p class="price"> $<%=t.price%></p>
             <% if t.retired? %>
               <button class="disabled btn" type="button"></button>
               Item Retired
             <% else %>
              <center> <%= button_to "Add to Cart", carts_path(item_id: t.id), method: :post, class: "btn btn-default" %></center>
             <% end %>
             <br>
             <% if current_admin? %>
               <center><%= button_to "Edit Item", edit_admin_item_path(t), method: :get, class: "btn btn-warning" %></center>
               <br>
             <% end %>
           </div>
         </div>
       </div>
        <%end%>
     </div>
         <%= will_paginate(@items, class: "flickr_pagination") %>
       </div>
    </div>
  </div>
</div>
