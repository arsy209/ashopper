<table class="table table-hover">
  <tr>
    <td class="table-header">Order ID</td>
    <td class="table-header">Order Status</td>
    <td class="table-header">Order Date</td>
  </tr>
  <% @user.orders.reverse[0..4].each do |order| %>
    <tr>
      <td class="table-detail">
        <%= link_to "order number: #{order.id}", order_path(order) %>
      </td>
      <td class="table-detail">
        <%= order.status %>
      </td>
      <td class="table-detail">
        <%= order.created_at %>
      </td>
    </tr>
  <% end %>
</table>
