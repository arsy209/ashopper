<div id="all">
  <div id="content">
    <div class="container">
      <div class="col-md-12">
        <div class="col-md-6">
          <div class="box">
            <h1><%= "Editing #{@item.title}" %></h1>
            <hr>
            <%= bootstrap_form_for @item, :url => admin_item_path do |f| %>
              <div class="form-group">
                <%= f.text_field :title %>
              </div>
              <div class="form-group">
              <%= f.text_area :description %>
              </div>
              <div class="form-group">
                <%= f.number_field :price %>
              </div>
              <div class="form-group">
                <%= f.collection_select :category_id, Category.all, :id, :title %>
              </div>
              <div class="form-group">
                <%= f.select(:inventory_status, Item.inventory_statuses.keys) %>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i>Update</button>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
